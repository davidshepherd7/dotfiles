[ui]
username = David Shepherd <david.shepherd@biositesystems.com>
ignore = ~/.hgignore
editor = emacsclient -c

[pager]
pager = less -F -R -X -S

[extensions]
pager =
progress =
color =
purge =
shelve =
graphlog =
record =
histedit =
crecord = ~/.hgex/crecord/
rebase =

[color]
custom.rev = red
custom.tag = yellow bold
custom.bookmark = yellow
custom.author = blue bold
custom.time = green

[alias]
# pretty log graphs:

# Detailed
lg = !$HG log --color=always -G --template "{if(tags, label('custom.tag','[{tags}] '))}{if(bookmarks, label('custom.bookmark','[{bookmarks}] '))}{label('custom.rev',node|short)} {desc|firstline} {label('custom.time',date|age)} {label('custom.author',author|person)}" $@ | less -FRXS

# Simpler
lgs = !$HG log --color=always -G --template "{if(tags, label('custom.tag','[{tags}] '))}{if(bookmarks, label('custom.bookmark','[{bookmarks}] '))}{label('custom.rev',node|short)} {label('custom.time',date|age)} {label('custom.author',author|person)}" $@ | less -FRXS

# Compact log (removes empty lines)
lgc = !$HG lg $@ | grep '[^| ]' --color=never | less -FRXS

# Substate friendly status
st = st -S
status = status -S


[hooks]
pre-merge = kill_gulp.sh
