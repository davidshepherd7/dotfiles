#!/bin/sh

set -o nounset

# Run space to ctrl (hold down space = ctrl)
# ============================================================
s2cdir=$HOME/code/space2ctrl/
~/.my_start_Space2Ctrl.sh $s2cdir &


# Other
# ============================================================

# Change Alt Gr to plain alt
xmodmap -e "clear mod5"
xmodmap -e "keycode 108 = Alt_L"

# Compositing (transparency)
xcompmgr &


exit 0
