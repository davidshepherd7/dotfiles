super + t
    urxvt

super + d
    urxvt -e "$SHELL" -c 'cd "$HOME/code/boron-unstable" && exec $SHELL'

super + D
    urxvt -e "$SHELL" -c 'cd "$HOME/code/hafnium-unstable" && exec $SHELL'

super + r
    sensible-browser

super + s
    emacsclient -c -n -e '(switch-to-buffer nil)'

super + m
    emacsclient -c -n -e '(new-clean-deft)'

super + a
    sensible-browser 'inbox.google.com'

super + p
    helm-dmenu.sh

super + P
    dmenu_run

super + equal
    gnome-screensaver-command -l

super + comma
    emacs --daemon

super + period
    urxvt -e ipython3


# numpad launchers
KP_End
    urxvt

KP_Down
    emacsclient -c -n -e '(switch-to-buffer nil)'

KP_Next
    sensible-browser


# function keys
XF86AudioMute
    amixer -D pulse sset Master mute

XF86AudioLowerVolume
    amixer -D pulse sset Master 5%- unmute > /dev/null

XF86AudioRaiseVolume
    amixer -D pulse sset Master 5%+ unmute > /dev/null

XF86MonBrightnessUp
    xbacklight +20

XF86MonBrightnessDown
    xbacklight -20

Print
    gnome-screenshot

super + F10
    keybinds.sh pl

super + F11
    setxkbmap gb

super + F12
    keybinds.sh gb


# biosite
super + f
    urxvt -e psql -U boron_user boron

super + F
    urxvt -e psql -U hafnium hafnium

XF86AudioPlay
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

XF86AudioPrev
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

XF86AudioNext
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
