# Terminal
super + t
    urxvt

# Monorepo terminal
super + d
    urxvt -e "$SHELL" -c 'cd "$HOME/code/monorepo" && exec $SHELL'

# Browser
super + r
    sensible-browser

# Emacs
super + s
    emacsclient -c -n -e '(ds/switch-to-non-org-buffer)'

super + S
    emacsclient -c -n -e '(switch-to-buffer nil)'
    
# Take new note
super + m
    emacsclient -c -n -e '(new-clean-deft)'

# Email
super + a
    sensible-browser 'mail.google.com'

# Todo list
super + c
    emacsclient -c -e '(ds/show-wave-todo-list)'

# Clipboard menu
super + v
    clipmenu

# Disabled b/c I think it's causing emacs to garbage collect a lot? I should try
# redirecting stdout/stderr and adding nohup etc
# super + p
#     helm-dmenu.sh

# Run
super + p
    dmenu_run

# Lock
super + equal
    gnome-screensaver-command -l

# ipython
super + period
    urxvt -e ipython3

super + g
    emacs-anywhere.sh

XF86AudioMute
    amixer -D pulse sset Master mute

XF86AudioLowerVolume
    amixer -D pulse sset Master 5%- unmute > /dev/null

XF86AudioRaiseVolume
    amixer -D pulse sset Master 5%+ unmute > /dev/null

XF86MonBrightnessUp
    xbacklight +20

XF86MonBrightnessDown
    xbacklight -20

Print
    flameshot gui

# Help
super + F1
    sxhkd-help

# Colemak keyboard
super + F10
    keybinds.sh pl david-gb-colemak

# Qwerty keyboard
super + F11
    setxkbmap gb

super + F12
    keybinds.sh gb

# Postgres
super + f
    urxvt -e pgcli -U chimelife -h localhost wavelocal --no-warn

XF86AudioPlay
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

XF86AudioPrev
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

XF86AudioNext
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

Pause
    desktop-pause.sh -s

