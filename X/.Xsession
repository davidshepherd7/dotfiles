#!/bin/sh
#
# ~/.xinitrc
#
# Executed by startx (run your window manager from here)

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi


echo "Starting"


# ============================================================
# End of /etc/skel/.xinitrc

. "$HOME/.zshenv"

# Run things
# ============================================================

n_screens="$(xrandr --listmonitors | grep -E '^ [0-9]+: ' --count)"
if [ "$n_screens" = "2" ]; then
    sylwia-desk.sh
fi

# Set desktop background (randomly, including sub folders)
feh --bg-scale "$HOME/Dropbox/other/wallpapers" -zr &

# Key binds
keybinds.sh &

# Screen colouring based on time (lat/long for Birmingham)
# redshift -l 52.5:1.9 -r &

# Hotkeys, `-m -1` to respond to remappings
export ALTERNATE_EDITOR=''
sxhkd -m -1 &

# Network manager gui
nm-applet &

# Start dropbox
dropbox start &

# Clipboard
glipper &

# Bluetooth
blueman-applet &

# Audio controls
pasystray &

# Transparancy for emacs
xcompmgr &

# Conky (running as a panel). Run then restart later to get virtual
# desktops right.
conky -d &
sleep 6 && killall conky && conky -d &

# Trayer as right half of panel (for applets)
trayer --edge top --align right \
       --expand false --width 315 --widthtype pixel \
       --height 23  --monitor 1 \
       --transparent true --tint 0x000000 --alpha 100 &

# HACK: temporary workaround for firefox not starting pulseaudio correctly when needed
pulseaudio --start --exit-idle-time=-1

# Emacs daemon
emacsclient --no-wait --eval 't' &

# On my work machine: run chat tools
if [ "$(hostname)" = "david-wave" ]; then
    skypeforlinux &
    zoom &
fi

# Alternative screen locking
xset s 600
xss-lock -- gnome-screensaver-command -l &

# and finally run xmonad itself
xmonad
