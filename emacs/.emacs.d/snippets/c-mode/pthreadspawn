# -*- mode: snippet; require-final-newline: nil -*-
# key: pthreadspawn
# --

  pthread_attr_t attr;
  pthread_attr_init(&attr);

  pthread_t ${1:thread}_tid[${2:5}];
  for(int i=0; i<$2; i++) {
    pthread_create(&$1_tid[i], &attr, $1, NULL);
  }

  for(int i=0; i<$2; i++) {
    pthread_join($1_tid[i], NULL);
  }
