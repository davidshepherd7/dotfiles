# Prettyness
use_xft yes
xftfont HandelGotD:size=11
xftalpha 1.0
double_buffer yes
own_window_argb_visual true
own_window_argb_value 150


# Positioning and panel config
own_window yes
own_window_type panel
disable_auto_reload yes # autoreload + panel + xmonad doesn't work well..
minimum_size 1440 15
alignment tl
gap_x 0
gap_y 0


# Content
update_interval 0.2



TEXT
 (${desktop}/${desktop_number}) \
                               \
 ${color blue} ${cpugraph cpu0 15, 60} \
 ${color green} ${memgraph 15, 60} \
 ${color yellow} ${diskiograph_read 15, 60} \
 ${color yellow} ${diskiograph_write 15, 60} \
 ${color } \
                               \
 Dropbox: ${execi 6 dropbox status | sed -n 1p} \
 apt-get: ${execi 60 apt-get upgrade --dry-run -q | grep 'to upgrade,' | awk '{print $1}'} \
 ${battery} \
                               \
 ${time %H:%M  %d/%m/%Y} \
 ${offset 5000} # position a space character way off to the right so that
                # the bar covers the screen
