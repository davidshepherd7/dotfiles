# Prettyness
use_xft yes
xftfont HandelGotD:size=11
xftalpha 1.0
double_buffer yes
own_window_argb_visual true
own_window_argb_value 200


# Positioning and panel config
own_window yes
own_window_type panel
disable_auto_reload yes # autoreload + panel + xmonad doesn't work well..
minimum_size 500 15
alignment tl
gap_x 0
gap_y 0


# Content
update_interval 0.2



TEXT
 (${desktop}, ${desktop_name}) \
 ${cpugraph 15, 60 -t} \
 ${memgraph 15, 60} \
 swapgraph \
 ${upspeedgraph eth0 15, 60} \
 ${downspeedgraph eth0 15,60} \
 ${time %H:%M  %D} \
 ${offset 5000} # position a space character way off to the right so that
                # the bar covers the screen
